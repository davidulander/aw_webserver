{
  "name": "server",
  "version": "1.0.0",
  "description": "Web server used to communicate with pi gateway and client app",
  "main": "bundle.js",
  "scripts": {
    "test": "webpack --config webpack.config.test.js",
    "test2": "mocha-webpack --webpack-config ./webpack.config.test.js --glob \"*.spec.js\" spec",
    "build": "webpack --config webpack.config.js",
    "rebuild": "npm run build && node dist/bundle.js",
    "dev": "nodemon --watch src/ -e js,ts --exec npm run rebuild",
    "start": "node dist/bundle.js",
    "prod:build": "NODE_ENV=production npm run build",
    "prod:migrate": "NODE_ENV=production sequelize db:migrate"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/davidulander/aw_webserver.git"
  },
  "author": "David Ulander",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davidulander/aw_webserver/issues"
  },
  "homepage": "https://github.com/davidulander/aw_webserver#readme",
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/helmet": "0.0.40",
    "@types/request": "^2.47.1",
    "@types/sequelize": "^4.27.25",
    "@types/sinon": "^5.0.2",
    "axios": "^0.18.0",
    "bcrypt": "^3.0.0",
    "es6-promise": "^4.2.5",
    "express": "^4.16.3",
    "helmet": "^3.13.0",
    "nodemon": "^1.18.3",
    "npm": "^6.4.1",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "request": "^2.88.0",
    "sequelize": "^4.38.0",
    "sequelize-cli": "^4.1.1",
    "sinon": "^6.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.2.0",
    "mocha-webpack": "^1.1.0",
    "ts-loader": "^5.0.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2",
    "webpack-shell-plugin": "^0.5.0"
  }
}
